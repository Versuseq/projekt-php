<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %} • Orderly</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-sm">
            <a class="navbar-brand" href="{{path('app_home')}}">Orderly</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
                aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_home')}}">{{'home'|trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{path('menu')}}" class="nav-link">{{'menu'|trans}}</a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('dishes_index')}}">{{'dishes'|trans}}</a>
                    </li>
                    {% endif %}
                </ul>
                {% set switch_locale = app.request.locale == 'en_US' ? 'pl_PL' : 'en_US' %}
                <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params') | merge({'_locale': switch_locale})) }}" class="btn btn-outline-secondary me-4">
                    {{ switch_locale|reverse|slice(3)|reverse|upper }}
                </a>
                {% if is_granted('IS_AUTHENTICATED') %}
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        {{app.user.email}}
                    </button>
                    <ul class="dropdown-menu text-end dropdown-menu-end">
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{path('user_management_index')}}" class="dropdown-item">{{'manage_users'|trans}}</a></li>
                        {% endif %}
                        <li><a class="dropdown-item disabled" href="#">{{'profile'|trans}}</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="{{path('app_logout')}}">{{'logout'|trans}}</a></li>
                    </ul>
                </div>
                {% else %}
                <div class="d-flex gap-1">
                    <a href="{{path('app_register')}}" class="btn btn-outline-secondary">{{'register'|trans}}</a>
                    <a href="{{path('app_login')}}" class="btn btn-secondary">{{'login'|trans}}</a>
                </div>
                {% endif %}
            </div>
        </div>
    </nav>
    <main class="container-sm">
        {% block body %}{% endblock %}
    </main>
    <ul class="list-unstyled position-fixed bottom-0 end-0 p-2">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
            <li class=>
                <div class="alert alert-primary alert-{{ label }} alert-dismissible fade show" role="alert">
                    <span class="pe-2">{{ message }}</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </li>
            {% endfor %}
        {% endfor %}
    </ul>
    <footer>
        <div class="container-sm">
            Maciej Brzeski
        </div>
    </footer>
</body>

</html>